<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Semantic Poker Benchmark</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        .navbar-brand-icon { font-size: 1.5rem; margin-right: 0.5rem; }
        .status-badge { font-size: 0.75rem; }
        .door-card { width: 80px; height: 100px; display: flex; flex-direction: column; align-items: center; justify-content: center; border-radius: 8px; font-weight: bold; }
        .door-treasure { background-color: #ffc107; color: #000; border: 2px solid #e0a800; }
        .door-trap { background-color: #dc3545; color: #fff; border: 2px solid #b02a37; }
        .door-empty { background-color: #6c757d; color: #fff; border: 2px solid #565e64; }
        .sentence-engine { border-left: 3px solid #198754; padding-left: 0.75rem; }
        .sentence-architect { border-left: 3px solid #dc3545; padding-left: 0.75rem; }
        .score-positive { color: #198754; font-weight: bold; }
        .score-negative { color: #dc3545; font-weight: bold; }
        .score-neutral { color: #6c757d; }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <span class="navbar-brand-icon">&#127183;</span>
                Semantic Poker Benchmark
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Matches/New">
                            <i class="bi bi-plus-circle"></i> New Match
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Lobby/Create">
                            <i class="bi bi-joystick"></i> Interactive
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Leaderboard">
                            <i class="bi bi-trophy"></i> Leaderboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Analysis">
                            <i class="bi bi-graph-up"></i> Analysis
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Debug">
                            <i class="bi bi-bug"></i> Debug
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="container mt-5 mb-3">
        <hr />
        <p class="text-muted text-center small">
            Semantic Poker Benchmark &mdash; "The Oracle's Bluff" &mdash; Zero-luck LLM Theory of Mind Testing
        </p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
